<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="编号"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_step"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="NNN"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_possible_reason"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="根据部件手册的可能原因"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_true_reason"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_is_use"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="+"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_is_work"
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="+"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_remark"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_pic"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="-"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_video"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="-"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_audio"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="-"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

</LinearLayout>
