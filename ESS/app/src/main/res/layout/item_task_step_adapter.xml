<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bg_white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_number"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="编号"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_work_content"
        android:layout_width="329dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="NNN"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_completion"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="100%"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_worker_name"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="张三炮"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_reviewer_name"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="李大爷"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_result_num"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="600"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_remark"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="remark remark remark remark"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_picture_size"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="5"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_video_size"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="-"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/border_line" />

    <TextView
        android:id="@+id/txt_audio_size"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="-"
        android:textColor="@color/text_title_color"
        android:textSize="14sp" />

</LinearLayout>
