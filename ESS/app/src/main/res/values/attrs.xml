<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="LoadingView">
        <attr name="loadding_color" format="color" />
        <attr name="ring_style" format="enum">
            <enum name="square" value="0" />
            <enum name="round" value="1" />
        </attr>
        <attr name="progress_style" format="enum">
            <enum name="material" value="0" />
            <enum name="linear" value="1" />
        </attr>

        <attr name="ring_width" format="dimension" />
        <attr name="ring_radius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BadgeRadioButton">
        <!-- 提示数字背景颜色 -->
        <attr name="badge_bg_color" format="color" />
        <!-- 提示数字颜色 -->
        <attr name="badge_txt_color" format="color" />
        <!-- 提示数字大小 -->
        <attr name="badge_txt_size" format="dimension|reference" />
        <!-- 提示数字 -->
        <attr name="badge_txt_num" format="integer" />
    </declare-styleable>

    <declare-styleable name="ToggleButton">
        <attr name="borderWidthCus" format="dimension" />
        <attr name="offBorderColor" format="reference|color" />
        <attr name="offColor" format="reference|color" />
        <attr name="onColor" format="reference|color" />
        <attr name="spotColor" format="reference|color" />
        <attr name="animate" format="reference|boolean" />
        <attr name="isDefaultOn" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="voisePlayingIconAttr">
        <attr name="pointer_color" format="color" />
        <attr name="pointer_num" format="integer" />
        <attr name="pointer_width" format="float" />
        <attr name="pointer_speed" format="integer" />
    </declare-styleable>

</resources>